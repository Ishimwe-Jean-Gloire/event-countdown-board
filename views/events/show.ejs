<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= event.title %> | Event Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
   <style>
       .hide {
    opacity: 0;
    transition: opacity 0.5s ease-out;
  }
   </style>
</head>
<body>
  <div class="container mt-5">
       <% if (success_msg && success_msg.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert" id="flash-message">
    <%= success_msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
    <div class="card shadow">
      <div class="card-body">
        <h2 class="card-title"><%= event.title %></h2>

        <% if (event.date) { %>
          <h6 class="card-subtitle mb-3 text-muted">
            Event Date: <%= new Date(event.date).toLocaleDateString() %>
          </h6>
        <% } %>

        <p class="card-text"><%= event.description %></p>

        <a href="/" class="btn btn-secondary">‚Üê Back to All Events</a>
        <a href="/events/edit/<%= event.id %>" class="btn btn-warning"> Edit</a>
        <form action="/events/<%= event.id %>?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger"> Delete</button>
        </form>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
    const alert = document.getElementById('flash-message');
    if (alert) {
      setTimeout(() => {

        alert.classList.remove('show');
        alert.classList.add('hide');


        setTimeout(() => {
          alert.remove();
        }, 500); 
      }, 3000);
    }
  });
  </script>
</body>
</html>
